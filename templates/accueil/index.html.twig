<main class="container">
	<section class="row">
		<div class="col-12">
			<h1>
				Site e-commerce
			</h1>
			<p>
				Bienvenue dans notre boutique
			</p>
		</div>
        <img src="{{ asset('images/2.jpg') }}" class="d-block w-100" alt="..."/></br> 
		{% for categorie in categories %}
			{% if categorie.parent == null %}
				<div class="col-12">
					<h2>{{ categorie.nomcat }}</h2>
					{% for cat in categorie.categories %}
                        <div class="col-4"> 
						<div class="card" style="width: 15rem;">
							<div class="card-body" >
								<h8 class="card-title">{{ cat.nomcat }}</h8>
								<a href="{{path('list', {'id':cat.id})}}" class="btn btn-primary">Voir les produits</a>
							</div>
						</div>
					{% endfor %}
				{% endif %}


			</div>

		{% endfor %}
		<!--<div class"col-12">
			{{ dump() }}
		</div>-->
	</section>
</main>


